{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.renderLineHighlight": "all",
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "wordWrapColumn",
    "explorer.autoReveal": false,
    // change to "\n" for Unix workspaces on Windows
    "files.eol": "auto",
    "gitlens.statusBar.enabled": false,
    "gitlens.statusBar.reduceFlicker": true,
    "highlight-bad-chars.additionalUnicodeChars": ["\u0009"],
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/Users/zephyr/bin/flake8",
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "/Users/zephyr/.pyenv/versions/3.7.2/bin/python",
    "search.collapseResults": "alwaysExpand",
    "shellcheck.exclude": ["SC1117"],
    "shellcheck.run": "onSave",
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.removeExtensions": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "all",
    "window.title": "${rootName}${separator}${activeEditorShort}",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.horizontalScrolling": true
}